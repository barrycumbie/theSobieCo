<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>SOBIE - Login</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/styles/sobie-styles.css">
</head>

<body class="container-fluid">
    <!-- Navigation Bar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-4">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">
                <img src="/assets/sobie-icon.png" alt="SOBIE Logo" width="40">
            </a>
            <span class="navbar-text">Login Page</span>
        </div>
    </nav>

    <!-- Page Header -->
    <div class="container text-center mb-4">
        <h2>Login to Your SOBIE Account</h2>
    </div>

    <!-- Login Form -->
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <form action="/login" method="POST" class="card shadow p-4">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">

                    <% if (typeof errorMsg !== 'undefined' && errorMsg) { %>
                        <div class="alert alert-danger text-center">
                            <%= errorMsg %>
                        </div>
                    <% } %>

                    <% if (typeof successMsg !== 'undefined' && successMsg) { %>
                        <div class="alert alert-success text-center">
                            <%= successMsg %>
                        </div>
                    <% } %>
                    
                    <!-- Email -->
                    <div class="mb-3">
                        <label for="email" class="form-label">Email Address</label>
                        <input type="email" id="email" name="email" class="form-control" required>
                    </div>

                    <!-- Password -->
                    <div class="mb-3">
                        <label for="password" class="form-label">Password</label>
                        <input type="password" id="password" name="password" class="form-control" required>
                    </div>

                    <!-- Forgot Password -->
                    <div class="mb-3 text-end">
                        <a href="/forgot-password" class="text-decoration-none">Forgot your password?</a>
                    </div>

                    <!-- Submit -->
                    <div class="d-grid">
                        <button type="submit" class="btn btn-success w-100">Login</button>
                    </div>

                    <!-- Signup Redirect -->
                    <div class="text-center mt-3">
                        <p>Don't have an account? <a href="/signup">Sign up here</a>.</p>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <footer class="py-3 my-4">
        <ul class="nav justify-content-center border-top pt-3 mb-3">
            <li class="nav-item">
                <a href="https://sobieconference.org" class="nav-link px-2 text-body-secondary">
                    &copy; 2025 SOBIE | sobieconference.org |
                </a>
            </li>
            <li class="nav-item">
                <a href="https://www.una.edu/faculty/bcumbie.html" target="_blank"
                    class="nav-link px-2 text-body-secondary">@SOBIE Web Team
                </a>
            </li>
        </ul>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>